@model IEnumerable<App_XemPhim.Models.Phim>

@{
    ViewBag.Title = "IndexPhim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa phim</h2>

<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaPhim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenPhim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DanhMuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuocGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dienvien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thoiluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sotap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkTrailer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkPhim)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaPhim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuocGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HinhAnh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dienvien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thoiluong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sotap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkTrailer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkPhim)
        </td>
        <td>
            <button class="btn">@Html.ActionLink("Edit", "EditPhim", new { id = item.MaPhim })</button>
            <button class="btn">@Html.ActionLink("Delete", "DeletePhim", new { id = item.MaPhim })</button>
        </td>
    </tr>
}

</table>
