
@{
    ViewBag.Title = "DangNhap";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="text-center">
            <div style="width: 600px; margin-right: auto; margin-left: auto ">
                <h2>Đăng Nhập</h2>
                <form class="form-group" action="/Home/DangNhap" method="post">
                    <input class="form-control2" data-province="a" name="Tendn" id="Tendn" type="text" placeholder="Tên Đăng Nhập" />
                    <input class="form-control2 form-dn" name="Pass" id="Pass" type="password" placeholder="Mật Khẩu" style="margin-top:10px" />
                    @if (Request.HttpMethod == "POST")
                    {
                        if (ViewBag.tb != null)
                        {
                            <p style="color:red">@ViewBag.tb</p>
                        }
                    }

                    <input class="form-control2 btn-primary" type="submit" value="Đăng nhập" style="margin-top:20px" />
                </form>
            </div>
        </div>
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/hinhanh/rsz_biencamap.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/hinhanh/rsz_hanhtinhchet.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/hinhanh/rsz_maxresdefault.jpg" alt="New york" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/hinhanh/rsz_fastfurious7.jpg" alt="New york" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/hinhanh/rsz_bandaopenisula.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

<script src="~/Content/Phim.js"></script>